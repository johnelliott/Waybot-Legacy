<div class="row">
  <%= render "layouts/navbar" %>
  <h1>Runs</h1>
  <table>
    <thead>
      <tr>
        <td>
          <%= link_to new_run_path do %><i class="fa fa-plus"></i><span> new</span><% end %>
        </td>
      </tr>
    </thead>
    <tbody>
    <% @runs.each do |run| %>
      <tr>
        <td><%= link_to run.name, edit_run_path(run) %></td>
        <td><%= link_to (run.elapsed_time), edit_run_path(run) %></td>
        <td>
          <%= link_to edit_run_path(run) do %><i class="fa fa-plus"></i><span> new</span><% end %>
        </td>
        <td><%= link_to content_tag(:i,nil, :class=>"fa fa-times"), run, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>



