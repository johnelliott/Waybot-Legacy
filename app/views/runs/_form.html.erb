<%= form_for(@run) do |f| %>
  <% if @run.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@run.errors.count, "error") %> prohibited this run from being saved:</h2>

      <ul>
      <% @run.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :note %><br>
    <%= f.text_area :note %>
  </div>

  <div class="field"><%= f.file_field :json %></div>

  <div class='col-sm-6'>
    <div class="form-group">
      <%= f.label :start_time do %>
      <div class='input-group date' id='datetimepicker1'>
        <%= f.text_field :start_time, class: 'form-control' %> <!-- THIS IS WHAT I NEED TO DO IN EBR -->
        <span class="input-group-addon">
          <span class="glyphicon glyphicon-calendar"></span>
        </span>
      </div>
      <% end -%>
    </div>
  </div>
  <script type="text/javascript">
    $(function () {
      $('#datetimepicker1').datetimepicker({
        language: 'en',
        format: 'YYYY-MM-DD hh:mm:ss'
      });
    });
  </script>

    <div class='col-sm-6'>
    <div class="form-group">
      <%= f.label :end_time do %>
      <div class='input-group date' id='datetimepicker2'>
        <%= f.text_field :end_time, class: 'form-control' %> <!-- THIS IS WHAT I NEED TO DO IN EBR -->
        <span class="input-group-addon">
          <span class="glyphicon glyphicon-calendar"></span>
        </span>
      </div>
      <% end -%>
    </div>
  </div>
  <script type="text/javascript">
    $(function () {
      $('#datetimepicker2').datetimepicker({
        language: 'en',
        format: 'YYYY-MM-DD hh:mm:ss'
      });
    });
  </script>

   <div class="field">
    <%= f.label :start_time %><br>
    <%= f.datetime_select :start_time %>
  </div>
  <div class="field">
    <%= f.label :end_time %><br>
    <%= f.datetime_select :end_time %>
  </div>
  
  <div class="field">
    <%= f.label :completed do %>
      <%= f.check_box :completed %> 
      completed
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
